# ███████╗████████╗ █████╗ ███████╗██╗  ██╗
# ██╔════╝╚══██╔══╝██╔══██╗██╔════╝██║  ██║
# ███████╗   ██║   ███████║███████╗███████║
# ╚════██║   ██║   ██╔══██║╚════██║██╔══██║
# ███████║   ██║   ██║  ██║███████║██║  ██║
# ╚══════╝   ╚═╝   ╚═╝  ╚═╝╚══════╝╚═╝  ╚═╝

menu_stash()
{
	clear
	draw_line
	draw_logo
	print_project_and_git_info
	echo "STASH UTILITIES"
	draw_line

	echo "0 - List stashes"
	echo "1 - Add files to Stash"
	echo "2 - Pop files from Stash"
	draw_line
	echo "ENTER -> Back"
	draw_line
	echo ""
	read -p "Choose a STASH command: " opcao;
		case $opcao in
			 "0") menu_stash_list ;;
			 "1") menu_stash_add ;;
			 "2") menu_stash_pop ;;
			 "" ) menu_main ;;
		esac
}

menu_stash_list()
{
	draw_header "STASH UTILITIES" "LIST STASHES"
	git stash list
	wait_key
	menu_stash
}

menu_stash_add()
{
	draw_header "STASH UTILITIES" "ADD FILES TO STASH"

	begin_script "LIST STASHES"
	git stash list
	end_script "LIST STASHES"

	read -p "Stash name: " name;
	if [[ $name != "" ]]
	then
		git stash save $name
	else
		wait_key
		menu_stash
		return
	fi

	begin_script "LIST STASHES"
	git stash list
	end_script "LIST STASHES"

	wait_key
	menu_stash
}

#  ██████╗ ██╗   ██╗██╗
# ██╔════╝ ██║   ██║██║
# ██║  ███╗██║   ██║██║
# ██║   ██║██║   ██║██║
# ╚██████╔╝╚██████╔╝██║
#  ╚═════╝  ╚═════╝ ╚═╝

wait_key()
{
	echo ""
	draw_line
	read -p "> PRESS ANY KEY TO CONTINUE... " -n1 -s
	echo ""
	echo ""
}

separator()
{
	echo ""
	draw_line
	echo ""
}

draw_line()
{
	echo "---------------------------------------------------------------------------------------------"
}

draw_logo()
{
	figlet -f "Slant" "GIT COMMANDS"
}

begin_script()
{
	draw_line
	echo "BEGIN" $1
	draw_line
}

end_script()
{
	draw_line
	echo "END" $1
	draw_line
}

draw_header()
{
	clear
	draw_line
	draw_logo
	print_project_and_git_info

	if [[ $1 != "" && $2 != "" ]]
	then
		echo $1 " > " $2
		draw_line
	elif [[ $1 != "" ]]
	then
		echo $1
		draw_line
	fi
}

# ███████╗██╗   ██╗███╗   ██╗ ██████╗████████╗██╗ ██████╗ ███╗   ██╗███████╗
# ██╔════╝██║   ██║████╗  ██║██╔════╝╚══██╔══╝██║██╔═══██╗████╗  ██║██╔════╝
# █████╗  ██║   ██║██╔██╗ ██║██║        ██║   ██║██║   ██║██╔██╗ ██║███████╗
# ██╔══╝  ██║   ██║██║╚██╗██║██║        ██║   ██║██║   ██║██║╚██╗██║╚════██║
# ██║     ╚██████╔╝██║ ╚████║╚██████╗   ██║   ██║╚██████╔╝██║ ╚████║███████║
# ╚═╝      ╚═════╝ ╚═╝  ╚═══╝ ╚═════╝   ╚═╝   ╚═╝ ╚═════╝ ╚═╝  ╚═══╝╚══════╝

utils_has_remote()
{
	remotes=$(git branch -r)
	if [ $remotes=="" ]
	then
		return $BOOL_FAIL
	else
		return $BOOL_SUCCESS
	fi
}

utils_get_last_commit()
{
	echo $(git log -n1 --format="%h")
}

utils_get_package_version()
{
	if [ -e "package.json" ]
	then
		PACKAGE_VERSION=$(sed -nE 's/^\s*"version": "(.*?)",$/\1/p' package.json)
		echo $PACKAGE_VERSION
	else
		echo ""
	fi
}

utils_get_package_name()
{
	if [ -e "package.json" ]
	then
		PACKAGE_NAME=$(sed -nE 's/^\s*"name": "(.*?)",$/\1/p' package.json)
		echo $PACKAGE_NAME
	else
		echo ""
	fi
}

# functions
# Will return the current branch name
# Usage example: git pull origin $(current_branch)
#
function utils_get_current_branch()
{
	ref=$(git symbolic-ref HEAD 2> /dev/null) || \
	ref=$(git rev-parse --short HEAD 2> /dev/null) || return
	echo ${ref#refs/heads/}
}

